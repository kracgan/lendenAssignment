pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Security Scan') {
            steps {
                sh '''
                  trivy config --severity HIGH,CRITICAL --exit-code 1 terraform/
                '''
            }
        }

